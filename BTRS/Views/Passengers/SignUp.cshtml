@{
}

@using (Html.BeginForm("SignUp", "Passengers", FormMethod.Post))
{
    <h3>SignUp</h3>
    <table>
        <tr>
            <td>
                Name
            </td>
            <td>
                @Html.TextBox("Name",null,new{@type="text"})
            </td>
        </tr>
        <tr>
            <td>
                Email
            </td>
            <td>
                @Html.TextBox("Email",null,new{@type="text"})
            </td>
        </tr>
        <tr>
            <td>
                PhoneNumber
            </td>
            <td>
                @Html.TextBox("PhoneNumber",null,new{@type="text"})
            </td>
        </tr>
        <tr>
            <td>Gender</td>
            <td>
                @Html.RadioButton("Gender", "Male") Male
                @Html.RadioButton("Gender", "Female") Female
            </td>
        </tr>
        <tr>
            <td>
                Username
            </td>
            <td>
                @Html.TextBox("Username",null,new{@type="text"})
            </td>
        </tr>
        <tr>
            <td>
                Password
            </td>
            <td>
                @Html.TextBox("Password",null,new{@type="password"})
            </td>
        </tr>
        
    </table>
    @Html.TextBox("SignUp","SignUp",new{@type="submit"})
}


@Html.ActionLink("login", "login",  new { @class = "btn btn-link" })


